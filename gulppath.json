{
  "browserSync": {
    "proxy": "localhost",
    "port": 3000,
    "logLevel": "silent",
    "ui": {
      "port": 7678
    }
  },
  "tasks": {
    "ltco_styles": {
      "srcPath": "src/styles/**/*.scss",
      "destPath": "public/styles"
    },
    "ltco_scripts": {
      "srcPath": [
        "src/scripts/**/*"
      ],
      "destPath": "public/scripts"
    },
    "ltco_plugins_styles": {
      "srcPath": [
        "node_modules/@splidejs/splide/dist/css/splide.min.css"
      ],
      "destPath": "public/styles"
    },
    "ltco_plugins_scripts": {
      "srcPath": [
        "node_modules/jquery/dist/jquery.min.js",
        "node_modules/bootstrap/dist/js/bootstrap.min.js",
        "node_modules/jquery-mask-plugin/dist/jquery.mask.min.js",
        "node_modules/@popperjs/core/dist/umd/popper.min.js",
        "node_modules/@splidejs/splide/dist/js/splide.min.js"
      ],
      "destPath": "public/scripts"
    },
    "ltco_images": {
      "srcPath": "src/images/**/*",
      "destPath": "public/images"
    },
    "ltco_svgs": {
      "srcPath": "src/svgs/**/*.svg",
      "destPath": "public/images/svgs"
    }
  },
  "watch": {
    "ltco_styles": "src/styles/**",
    "ltco_scripts": "src/scripts/**",
    "ltco_images": "src/images/**",
    "ltco_svgs": "src/svgs/**",
    "ltco_all": "**/*.php"
  }
}
